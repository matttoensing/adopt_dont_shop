<h1>Application Approval Page</h1>
<h3><%= @application.name %></h3>
<p><%= @application.street %></p>
<p><%= @application.city %>, <%= @application.state %> <%= @application.zip_code %></p>
<p><%= @application.description %></p>
<p>Application Status: <%= @application.status %></p>

<% if @pets %>
  <h3>Pets Applied For: </h3>
  <%= @pets.each do |pet| %>
    <p><%= pet.name %></p>
    <p><%= pet.age %></p>
    <p><%= pet.breed %></p>
    <p><%= pet.adoptable %></p>
    <%= button_to "Approve #{pet.name}", { :controller => 'admins', :action => "show", :pet_id => pet.id, :application_id => @application.id, :method => :post }%>
    <%= button_to "Reject #{pet.name} Adoption Request", "/admin/applications/#{@application.id}",  { :controller => 'admins', :action => "delete", :reject => @application.id, :pet_id => pet.id, :application_id => @application.id, :method => :delete }  %>
  <% end  %>
<% end  %>

<% if @not_approved %>
  <%= @not_approved.each do |pet| %>
  <h3>Pets Applied For: </h3>
    <p><%= pet.name %></p>
    <p><%= pet.age %></p>
    <p><%= pet.breed %></p>
    <p><%= pet.adoptable %></p>
    <%= button_to "Approve #{pet.name}", { :controller => 'admins', :action => "show", :pet_id => pet.id, :application_id => @application.id, :method => :post }%>
    <%= button_to "Reject #{pet.name} Adoption Request", { :controller => 'admins', :action => "delete", :reject => @application.id, :pet_id => pet.id, :application_id => @application.id, :method => :delete } %>
  <% end  %>
<% end  %>

<% if @approved_pets %>
<h3>Pets Approved For: </h3>
    <p><%= @approved_pets.name %></p>
    <p><%= @approved_pets.age %></p>
    <p><%= @approved_pets.breed %></p>
    <p><%= @approved_pets.adoptable %></p>
    <p><%= @application.status %></p>
<% end  %>

<% if @application_rejected %>
    <p><%= @application_rejected.name %></p>
    <p><%= @application_rejected.street %></p>
    <p><%= @application_rejected.city %>, <%= @application_rejected.state %> <%= @application_rejected.zip_code %></p>
    <p>Status: <%= @application_rejected.status %></p>
<% end  %>
