<h1>New Application</h1>
<%= form_tag("/applications", method: 'post') do %>
<% if @application.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@application.errors.count, "error") %>
    Prohibited this Application from being Created: </h2>
    <ul>
        <% application.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <br>
  <p>
    <%= label_tag "Name" %><br />
    <%= text_field_tag :name %>
  </p>
  <p>
    <%= label_tag "Street Adress" %><br />
    <%= text_field_tag  :street %>
  </p>
  <p>
  <%= label_tag "City" %><br />
  <%= text_field_tag  :city %>
</p>
<p>
  <%= label_tag "State" %><br />
  <%= text_field_tag  :state %>
</p>
<p>
  <%= label_tag "Zip Code" %><br />
  <%= text_field_tag  :zip_code %>
</p>
<p>
  <%= label_tag "Description" %><br />
  <%= text_field_tag  :description %>
</p>
  <p>
    <%= submit_tag("Create Application", method: :post) %>
  </p>
<% end %>
